{
  "api_key": {
    "type": "string",
    "description": "MemOS API密钥",
    "hint": "从MemOS获取的API密钥",
    "obvious_hint": true
  },
  "base_url": {
    "type": "string",
    "description": "MemOS API基础URL",
    "hint": "默认为 https://memos.memtensor.cn/api/openmem/v1",
    "default": "https://memos.memtensor.cn/api/openmem/v1"
  },
  "memory_limit": {
    "type": "int",
    "description": "记忆注入数量限制",
    "hint": "每次最多注入多少条事实记忆到提示词中（偏好记忆一定注入）",
    "default": 5
  },
  "prompt_language": {
    "description": "记忆提示词语言",
    "type": "string",
    "options": ["auto", "zh", "en"],
    "hint": "auto: 自动检测; zh: 中文; en: English",
    "default": "zh"
  },
  "upload_interval": {
    "type": "int",
    "description": "记忆上传频率 (轮数)",
    "hint": "每积累多少轮对话后上传一次。默认为1 (实时上传)。设置为3表示每3个问答对上传一次。",
    "default": 1
  },
  "group_injection_type": {
    "type": "string",
    "description": "群聊记忆注入类型",
    "options": ["user", "system"],
    "hint": "user: 将记忆临时注入到用户prompt中; system: 将记忆作为system消息添加到上下文中",
    "default": "system"
  },
  "private_injection_type": {
    "type": "string",
    "description": "私聊记忆注入类型",
    "options": ["user", "system"],
    "hint": "user: 将记忆临时注入到用户prompt中; system: 将记忆作为system消息添加到上下文中",
    "default": "user"
  }
}